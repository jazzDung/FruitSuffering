<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:text="Camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnCamera"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginBottom="40dp" android:textColor="@color/black"/>
    <Button
            android:text="Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnUpload"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnCamera" app:layout_constraintEnd_toStartOf="@+id/btnConfirm"
            android:layout_marginBottom="40dp" android:textColor="@color/black"/>
    <Button
            android:text="Create Todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnConfirm" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp" android:textColor="@color/black"/>
    <TextView
            android:text="I think it's an"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/result"
            app:layout_constraintBottom_toTopOf="@+id/btnUpload" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="20dp" android:textSize="24sp"
            android:textAlignment="center" android:fontFamily="sans-serif-light"
            android:textColor="@android:color/black"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@+id/result"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>